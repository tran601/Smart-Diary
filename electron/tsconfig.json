{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node", "electron"],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["main.ts", "preload.ts", "services/**/*.ts"]
}
