{
  "name": "smart-diary",
  "version": "0.0.0",
  "description": "Smart Diary desktop app",
  "main": "electron/dist/main.js",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "concurrently -k \"npm run dev:electron:build\" \"npm run dev:electron:start\"",
    "dev:electron:build": "tsc -p electron/tsconfig.json --watch",
    "dev:electron:start": "wait-on http://localhost:5173 electron/dist/main.js && electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "smoke": "node scripts/smoke.mjs",
    "offline-check": "node scripts/offline-check.mjs"
  },
  "dependencies": {
    "antd": "^5.14.0",
    "better-sqlite3": "^9.4.0",
    "openai": "^4.28.0",
    "quill": "^1.3.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-quill": "^2.0.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "wait-on": "^7.2.0"
  }
}
